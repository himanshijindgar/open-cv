      },
      "cell_type": "code",
      "source": [
        "cap = cv2.VideoCapture(0)\n",
        "\n",
        "while True:\n",
        "    ret, frame = cap.read()\n",
        "    #print (ret)\n",
        "    cv2.imshow('Our Live Sketch', frame)\n",
        "    if cv2.waitKey(1) == 27:\n",
        "        break\n",
        "        \n",
        "cap.release()\n",
        "cv2.destroyAllWindows()"
      ],
